 <form action="/books" method="post" >
    {{!-- <div class="container"> --}}
        <div class="row-mt-5">
            <div class="col-8 offset-2" >
                <h2 class="text-center">Δώστε τα στοιχεία πρόσβασής σας...</h2>
            </div>
        </div>
        {{!-- <fieldset class="border p-2 mb-3"> --}}
            {{!-- <legend class="m-auto">User Login</legend> --}}
            <div class="row mt-1">
                <div class="col-6 offset-3">
                    <div class="form-floating">
                        <input type="text" class="form-control {{#if message.username }} is-invalid {{/if}}" 
                        value="{{message.username.value}}" name="username" id="form_username" 
                        placeholder="Όνομα Χρήστη" required="required autofocus"/>
                        <label for="form_username" class="col-form-label">Όνομα Χρήστη</label>
                        <div class="valid-feedback">OK</div>
                        <div class="invalid-feedback">{{message.username.msg}}</div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-6 offset-3">
                    <div class="form-floating">
                        <input type="password" class="form-control {{#if message.password }} is-invalid {{/if}}" 
                        value="{{message.password.value}}" name="password" id="password" 
                        placeholder="Συνθηματικό" required="required autofocus"/>
                        <label for="password" class="col-form-label">Συνθηματικό</label>
                        <div class="valid-feedback">OK</div>
                        <div class="invalid-feedback">{{message.password.msg}}</div>
                    </div>
                </div>
            </div>
            {{#if newusermessage}}
                <div class="row mt-5">
                    <div class="col-6 offset-3">
                        <div class="alert alert-primary" role="alert">
                            {{newusermessage}}
                        </div>
                    </div>
                </div>
            {{/if}}
        {{!-- </fieldset> --}}
        <div class="row mt-5">
            <div class="col-6 offset-3">
                <button type="submit" class="btn btn-primary login-btn btn-block w-100">Είσοδος</button>
            </div>
        </div>
    {{!-- </div> --}}
    <div class="row mt-5">
            <div class="col-6 offset-3 text-center">
                <a href="/register">Δημιουργία νέου λογαριασμού</a> 
            </div>
    </div>

</form> 