<h2>My Books - ({{books.length}})</h2>
{{#if books}}
<div class="table-responsive-sm">
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th class="d-print-none"> 
                <a class="btn btn-sm btn-success" href="/addbookform">Add a book</a>
            </th>
        </tr>    
        </thead>
        <tbody>
             {{#each books}}
            <tr>
                <td>{{this.title}}</td>
                <td colspan="2">{{this.author}}</td>
            </tr>
             {{/each}} 
        </tbody>
    </table>
</div>
{{/if}}
{{!-- not if --}}
{{#unless books}}
<div class="row mt-5">
    <div class="col">There are not any books !</div>
</div>
{{/unless}}